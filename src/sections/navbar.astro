<header class="bg-white">
  <div
    class="container mx-auto px-4 py-6 flex flex-wrap items-center justify-between"
  >
    <a
      href="/"
      class="text-picton-blue-500 flex gap-2 justify-center items-center"
    >
      <div>
        <img src="/images/logo.svg" alt="Hospital Privado" class="w-10 h-10" />
      </div>
      <span class="leading-tight font-semibold">
        Hospital Privado <br /> La Gracia
      </span>
    </a>
    <nav class="hidden md:flex space-x-6">
      <a href="#servicios" class="text-gray-600 hover:text-gray-900 scroll-link"
        >Servicios</a
      >
      <a href="#nosotros" class="text-gray-600 hover:text-gray-900 scroll-link"
        >Quienes somos</a
      >
      <a href="#footer" class="text-gray-600 hover:text-gray-900 scroll-link"
        >Contacto</a
      >
    </nav>

    <a
      href="https://wa.me/50259676197"
      target="_blank"
      rel="noopener noreferrer"
      class="bg-teal-400 text-white px-4 py-2 rounded-md hover:bg-teal-500 text-xs md:text-base"
    >
      Escribenos
    </a>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const scrollLinks = document.querySelectorAll('.scroll-link');

    scrollLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href') || '#';
        const targetElement = document.querySelector(targetId);

        if (targetElement) {
          const offset = 100; // Ajusta este valor seg√∫n el alto de tu navbar
          const targetPosition =
            targetElement.getBoundingClientRect().top + window.screenY - offset;

          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth',
          });
        }
      });
    });
  });
</script>
