---
import MarkerIcon from '@/components/ui/icons/markerIcon.astro';
import PhoneIcon from '../components/ui/icons/phone.astro';
import Schedule from '../components/ui/icons/schedule.astro';

const year = new Date().getFullYear();
---

<footer id="footer" class="bg-gray-50 py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Logo y descripción -->
      <div>
        <h2 class="text-2xl font-semibold mb-2">
          <span class="text-picton-blue-600">Hospital privado </span><span
            class="text-teal-500">la gracia</span
          >
        </h2>
        <p class="text-gray-600 mb-4">
          Atención que se siente, con la gracia que mereces
        </p>
        <div class="flex space-x-4">
          <img
            src="/images/logo.svg"
            alt="logo hospital privado la gracia"
            class="w-24 h-24"
          />
        </div>
      </div>

      <!-- Contact Centre -->
      <div>
        <h3 class="text-gray-800 font-semibold text-lg mb-4">
          Centro de Contacto
        </h3>
        <ul class="space-y-3">
          <li class="flex items-center text-gray-600">
            <PhoneIcon name="phone" class="w-5 h-5 mr-2 text-picton-blue-600" />
            <a href="tel:+50277672852">+502 7767-2852</a>
          </li>
          <li class="flex items-center text-gray-600">
            <MarkerIcon
              name="map-pin"
              class="w-5 h-5 mr-2 text-picton-blue-600"
            />
            <a target="_blank" href="https://maps.app.goo.gl/s4bcCxPQ4fCh74He6"
              >25 Av. 10A-12 Zona 3, Quetzaltenango</a
            >
          </li>
          <li class="flex items-center text-gray-600">
            <Schedule name="clock" class="w-5 h-5 mr-2 text-picton-blue-600" />
            Lun – Vie: 8:00am 6:00pm
          </li>
          <li class="flex items-center text-gray-600">
            <Schedule name="clock" class="w-5 h-5 mr-2 text-picton-blue-600" />
            Emergencias: 24/7, Lunes – domingo
          </li>
        </ul>
      </div>

      <!-- Important Links -->
      <div>
        <h3 class="text-gray-800 font-semibold text-lg mb-4">Redes Sociales</h3>
        <div class="grid grid-cols-2 gap-4">
          <ul class="space-y-2">
            <li>
              <a
                target="_blank"
                href="https://www.facebook.com/LaGraciaHospital"
                class="text-picton-blue-600 hover:text-picton-blue-700 flex items-center"
              >
                <MarkerIcon name="facebook" class="w-5 h-5" />
                <span>Facebook</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-200 mt-12 pt-8 text-center text-gray-600">
      <p>
        Todos los derechos reservados. Copyright © {year} | hospitalprivadolagracia.com
      </p>
    </div>
  </div>
</footer>
